<Window x:Class="Praktosik4Csharp.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktosik4Csharp"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Enter password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 5"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Authorize" Click="AuthorizeButton_Click" Margin="0 5"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
