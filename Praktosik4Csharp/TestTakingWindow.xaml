<Window x:Class="Praktosik4Csharp.TestTakingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktosik4Csharp"
        mc:Ignorable="d"
        Title="TestTakingWindow" Height="450" Width="800">
    <Grid>
        
        <StackPanel>
            <TextBlock Text="Question" Margin="5"/>
           
        </StackPanel>

       
        <StackPanel>
            <RadioButton Content="Option 1" Margin="5"/>
            <RadioButton Content="Option 2" Margin="5"/>
            <RadioButton Content="Option 3" Margin="5"/>
        </StackPanel>

        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Next Question" Click="NextQuestionButton_Click" Margin="5"/>
            <Button Content="Submit Test" Click="SubmitTestButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
